<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="checkedTextColor" format="color"/>
    <attr name="uncheckedTextColor" format="color"/>
    <attr name="buttonBackground" format="reference"/>
    <attr name="checkedBackground" format="reference"/>
    <attr name="animationType" format="enum">
        <enum name="none" value="0"/>
        <enum name="scale" value="1"/>
        <enum name="alpha" value="2"/>
    </attr>
    <attr name="animationDuration" format="integer"/>

    <declare-styleable name="ToggleButtonGroup">
        <attr name="android:textSize"/>
        <attr name="android:textColor"/>
        <attr name="android:saveEnabled"/>
        <attr name="checkedTextColor"/>
        <attr name="uncheckedTextColor"/>
        <attr name="checkedBackground"/>
        <attr name="buttonBackground"/>
        <attr name="animationType"/>
        <attr name="animationDuration"/>
        <attr name="textButtons" format="reference"/>
        <attr name="buttonWidth" format="enum|dimension">
            <enum name="fill_parent" value="-1"/>
            <enum name="match_parent" value="-1"/>
            <enum name="wrap_content" value="-2"/>
        </attr>
        <attr name="buttonHeight" format="enum|dimension">
            <enum name="fill_parent" value="-1"/>
            <enum name="match_parent" value="-1"/>
            <enum name="wrap_content" value="-2"/>
        </attr>
        <attr name="buttonSpacing" format="enum|dimension">
            <enum name="auto" value="-65536"/>
        </attr>
        <attr name="buttonSpacingForLastRow" format="enum|dimension">
            <enum name="auto" value="-65536"/>
            <enum name="align" value="-65537"/>
        </attr>
        <attr name="rowSpacing" format="enum|dimension">
            <enum name="auto" value="-65536"/>
        </attr>
        <attr name="flow" format="boolean"/>
        <attr name="buttonTextPaddingTop" format="dimension"/>
        <attr name="buttonTextPaddingBottom" format="dimension"/>
        <attr name="buttonTextPaddingLeft" format="dimension"/>
        <attr name="buttonTextPaddingRight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ToggleButton">
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="checkedTextColor"/>
        <attr name="uncheckedTextColor"/>
        <attr name="checkedBackground"/>
        <attr name="buttonBackground"/>
        <attr name="animationType"/>
        <attr name="animationDuration"/>
    </declare-styleable>

</resources>